{% extends 'base.html.twig' %}

{% block body %}
<!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Detail Client : {{ client.companyName }}</h2>
                        <span class="white-text"></span>
                        
                    </div>
                </div>
            </div>
        </section>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>CompanyName</th>
                <td>{{ client.companyName }}</td>
            </tr>
            <tr>
                <th>CompanyType</th>
                <td>{{ client.companyType }}</td>
            </tr>
            <tr>
                <th>ContactName</th>
                <td>{{ client.contactName }}</td>
            </tr>
            <tr>
                <th>ContactJob</th>
                <td>{{ client.contactJob }}</td>
            </tr>
            <tr>
                <th>ContactEmail</th>
                <td>{{ client.contactEmail }}</td>
            </tr>
            <tr>
                <th>ContactPhoneNumber</th>
                <td>{{ client.contactPhoneNumber }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ client.note }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
